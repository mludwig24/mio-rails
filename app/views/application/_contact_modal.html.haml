%div.modal.fade#contact_modal
	%div.modal-dialog
		%div.modal-content
			%div.modal-header
				%button.close{:type => "button", "data-dismiss" => "modal"}
					%span
						&times;
				%h3
					= t('general.contact_modal.header')
			%div.modal-body
				= render('contact_form')
			%div.modal-footer
				%button.btn.btn-primary{:type => "button", "data-dismiss" => "modal"}
					= t('global.close')