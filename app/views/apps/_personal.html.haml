= render "recap_field",
	label: t('activerecord.attributes.app.first_name'),
	value: @app.first_name
= render "recap_field",
	label: t('activerecord.attributes.app.last_name'),
	value: @app.last_name
= render "recap_field",
	label: t('activerecord.attributes.app.address'),
	value: @app.address
= render "recap_field",
	label: t('activerecord.attributes.app.city'),
	value: @app.city
= render "recap_field",
	label: t('activerecord.attributes.app.state'),
	value: @app.state
= render "recap_field",
	label: t('activerecord.attributes.app.zip'),
	value: @app.zip
= render "recap_field",
	label: t('activerecord.attributes.app.phone'),
	value: @app.phone
= render "recap_field",
