	label: t('activerecord.attributes.app.license_state'),
	value: @app.license_state
- @app.drivers.each do |driver|
	%div.panel-heading
		%h3.panel-title
			= t('app.form.header.other_driver')
	= render "recap_field",
		label: t('activerecord.attributes.driver.first_name'),
		value: driver.first_name
	= render "recap_field",
		label: t('activerecord.attributes.driver.last_name'),
		value: driver.last_name